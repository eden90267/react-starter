{
  "name": "react-starter",
  "version": "1.0.0",
  "description": "Web app boilerplate",
  "main": "src/js/index.js",
  "scripts": {
    "lint": "eslint src/js/.",
    "build": "rm -rf dist && cross-env NODE_ENV=production webpack --progress -p",
    "prestart": "npm run build",
    "start": "httpster -p 3000 -d ./dist",
    "watch:test": "jest --watch",
    "test": "jest",
    "posttest": "npm run lint",
    "coverage": "opener ./coverage/lcov-report/index.html",
    "dev": "opener http://localhost:3000 & webpack-dev-server --devtool eval --progress --colors --hot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eden90267/react-starter.git"
  },
  "keywords": [],
  "author": "eden90267",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eden90267/react-starter/issues"
  },
  "homepage": "https://github.com/eden90267/react-starter#readme",
  "devDependencies": {
    "autoprefixer": "^8.6.1",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "deep-freeze": "0.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.9.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "i": "^0.3.6",
    "image-webpack-loader": "^4.3.0",
    "img-loader": "^3.0.0",
    "jest-css-modules": "^1.1.0",
    "node-sass": "^4.9.0",
    "opener": "^1.4.3",
    "postcss-loader": "^2.1.5",
    "precss": "^3.1.2",
    "react-test-renderer": "^15.6.2",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.2"
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "cross-env": "^5.1.6",
    "httpster": "^1.0.3",
    "jquery": "^3.3.1",
    "moment": "^2.22.2",
    "popper.js": "^1.14.3",
    "prop-types": "^15.6.1",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-icons": "^2.2.7",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.3.1",
    "redux": "^3.7.2",
    "redux-thunk": "^2.3.0",
    "uuid": "^3.2.1"
  },
  "jest": {
    "setupFiles": [
      "./__tests__/global.js"
    ],
    "modulePathIgnorePatterns": [
      "global.js"
    ],
    "moduleNameMapper": {
      "\\.(scss)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "verbose": true,
    "collectCoverage": true,
    "notify": true,
    "collectCoverageFrom": [
      "src/js/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
